#version 330
in vec2 retTexCoord;

out vec4 FragColor;

uniform sampler2D ScreenTexture;
uniform float Frequency;
uniform float Amplitude;
uniform float Time;

void main()
{
	//vec3 col = texture(ScreenTexture, retTexCoord).rgb;

	float displacement = sin(retTexCoord.x * Frequency + Time) * Amplitude;
	vec2 displacedTexCoord = retTexCoord + vec2(displacement, 0.0);
	vec3 col = texture(ScreenTexture, displacedTexCoord).rgb;

	FragColor = vec4(col, 1.0);
}