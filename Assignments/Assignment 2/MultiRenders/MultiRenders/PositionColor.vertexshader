#version 330 

in vec3 vertices; 
in vec3 normals; 
in vec2 texCoords; 

uniform mat4 WVP;

out vec3 retNormal;
out vec2 retTexCoord; 
out vec4 retScreenProjection;


void main()
{
	 // Transform the model to screen projection
	retScreenProjection = WVP * vec4(vertices, 1.0);
	gl_Position = retScreenProjection;

	retNormal = normals;
	retTexCoord = texCoords;
}