#version 330 // OpenGL version 2.1 (minimum requirement)

in vec3 retNormal;
in vec2 retTexCoord;

out vec4 FragColor;

struct Material
{
	sampler2D diffuseTexture;
};


struct Light
{
	vec3 ambientColor;
	vec3 diffuseColor;
};


uniform Material material;
uniform Light light[1];

void main()
{
	vec4 color = vec4(light[0].diffuseColor, 1.0f) * texture(material.diffuseTexture, retTexCoord);
	FragColor = color * vec4(light[0].ambientColor, 1.0f);
}